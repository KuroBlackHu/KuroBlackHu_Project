<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/layout2_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingTop="15dp"
        android:alpha="0.5"
        android:src="@drawable/pic1" />

    <ImageView
        android:id="@+id/layout2_img4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:alpha="1"
        android:src="@drawable/pic7" />

    <ImageView
        android:id="@+id/layout2_img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout2_img4"
        android:layout_alignLeft="@+id/layout2_img4"
        android:layout_marginBottom="28dp"
        android:alpha="0.8"
        android:src="@drawable/pic5" />

    <ImageView
        android:id="@+id/layout2_img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2_img1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:alpha="0.5"
        android:src="@drawable/pic4" />

</RelativeLayout>
